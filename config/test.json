{
  "ravelo": {
    "enableServiceController": true,
    "enableRegistryController": true,
    "service": {
      "port": 3000,
      "host": "localhost"
    },
    "debug": { "request": [ "error" ] },
    "internalURL": "http://localhost:3000"
  },
  "gateway": {
    "enableServiceController": true,
    "enableGatewayProxy": true,
    "service": {
      "port": 3001,
      "host": "localhost"
    },
    "debug": { "request": [ "error" ] },
    "internalURL": "http://localhost:3001"
  },
  "consumer": {
    "enableServiceController": true,
    "gatewayUrlPrefix": "/consumer",
    "service": {
      "port": 3002,
      "host": "localhost"
    },
    "debug": { "request": [ "error" ] },
    "internalURL": "http://localhost:3002"
  }
}